<metatype:MetaData xmlns:metatype="http://www.osgi.org/xmlns/metatype/v1.0.0"
				   localization="content/Language">
	<OCD description="FileInstaller"
	   name="org-apache-felix-fileinstall-ocd-name"
	   id="org.apache.felix.fileinstall">

		<AD default="load"  id="felix.fileinstall.dir" name="Poll directory" required="true" type="String" />
		<AD default="2000"  id="felix.fileinstall.poll" name="Poll interval" required="false" type="String" />
		<AD default="0"  id="felix.fileinstall.log.level" name="Log level" required="false" type="String" />
		<AD default="true"  id="felix.fileinstall.bundles.new.start" name="Start new bundles?" required="false" type="String" />
		<AD default=""  id="felix.fileinstall.filter" name="File name filter" required="false" type="String" />
		<AD default="tmp"  id="felix.fileinstall.tmpdir" name="Temp directory" required="false" type="String" />
		<AD default="false"  id="felix.fileinstall.noInitialDelay" name="No initial delay" required="false" type="String" />
		<AD default="false"  id="felix.fileinstall.bundles.startTransient" name="Start bundles transiently" required="false" type="String" />
		<AD default="true" id="felix.fileinstall.bundles.startActivationPolicy" name="Use the bundle activation policy when starting" required="false" type="String" />
		<AD default="0"  id="felix.fileinstall.start.level" name="Bundles start level" required="false" type="String" />
	</OCD>
	<Designate pid="org.apache.felix.fileinstall">
		<Object ocdref="org.apache.felix.fileinstall" />
	</Designate>
</metatype:MetaData>